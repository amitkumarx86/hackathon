{
  "manifest_version": 2,
  "name":    "Unocoin Payment",
  "version": "0.1",
  "offline_enabled": true,

  "background": {
    //"persistent": false,
    "scripts": ["background.js"]
  },

  "content_scripts": [{
    "matches":    ["https://*/*"],
    "js":         ["content.js"],
    "run_at":     "document_idle",
    "all_frames": false
  }],

  "page_action": {
    "default_title": "Unocoin Payment Extension",
    //"default_icon": {
    //    "128": "img/icon.png"
   
    //},
    "default_popup": "popup.html"
  }

  // No special permissions required...
  //"permissions": []
}